{
  "name": "ekvio-dev/giftery",
  "description": "Giftery API client",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Vuylov Dmitry",
      "email": "vuylov.dmitry@e-queo.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Giftery\\": "src/"
    },
    "files": ["functions.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Giftery\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "giberti/phpunit-local-server": "^3.0",
    "guzzlehttp/guzzle": "^7.8",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9"
  },
  "suggest": {
    "guzzlehttp/guzzle": "PSR 7/17/18 compatible HTTP client"
  }
}
